@model LogRegWrapper
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WeddingPlanner</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body>
    <div class = "container">
        <div class = "row">
            <h1>Please Register or Sign In</h1>
        </div>
        <div class = "row">
            <div class = "col-sm-6">
                <form asp-action = "Register" asp-controller = "Home" method = "post">
                    <div class="form-group row">
                        <span class="col-sm-8 offset-sm-4 text-danger" asp-validation-for="Register.FirstName"></span>
                        <label asp-for="Register.FirstName" class="col-sm-4"></label>
                        <input asp-for="Register.FirstName" class="col-sm-8 form-control">
                    </div>

                    <div class="form-group row">
                        <span class="col-sm-8 offset-sm-4 text-danger" asp-validation-for="Register.LastName"></span>
                        <label asp-for="Register.LastName" class="col-sm-4"></label>
                        <input asp-for="Register.LastName" class="col-sm-8 form-control">
                    </div>

                    <div class="form-group row">
                        <span class="col-sm-8 offset-sm-4 text-danger" asp-validation-for="Register.Email"></span>
                        <label asp-for="Register.Email" class="col-sm-4"></label>
                        <input asp-for="Register.Email" class="col-sm-8 form-control">
                    </div>

                    <div class="form-group row">
                        <span class="col-sm-8 offset-sm-4 text-danger" asp-validation-for="Register.Password"></span>
                        <label asp-for="Register.Password" class="col-sm-4"></label>
                        <input asp-for="Register.Password" class="col-sm-8 form-control">
                    </div>

                    <div class="form-group row">
                        <span class="col-sm-8 offset-sm-4 text-danger" asp-validation-for="Register.Confirm"></span>
                        <label asp-for="Register.Confirm" class="col-sm-4"></label>
                        <input asp-for="Register.Confirm" class="col-sm-8 form-control">
                    </div>

                    <div class = "form-group-row">
                        <input type = "submit" value = "Register" class = "col-sm-4 btn-primary">
                    </div>
                </form>
            </div>
            
            <div class = "col-sm-6">
                <form asp-action = "Login" asp-controller = "Home" method = "post">
                    <div class="form-group row">
                        <span class="col-sm-8 offset-sm-4 text-danger" asp-validation-for="Login.LogEmail"></span>
                        <label asp-for="Login.LogEmail" class="col-sm-4"></label>
                        <input asp-for="Login.LogEmail" class="col-sm-8 form-control">
                    </div>
                    <div class="form-group row">
                        <span class="col-sm-8 offset-sm-4 text-danger" asp-validation-for="Login.LogPass"></span>
                        <label asp-for="Login.LogPass" class="col-sm-4"></label>
                        <input asp-for="Login.LogPass" class="col-sm-8 form-control">
                    </div>
                    <div class = "form-group-row">
                        <input type = "submit" value = "Login" class = "col-sm-4 btn-primary">
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>
</html>